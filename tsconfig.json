{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "shared/**/*.ts",
    "scheduler/**/*.ts",
    "cost-control/**/*.ts",
    "services/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "web-ui"]
}
